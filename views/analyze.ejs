<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href="/stylesheets/all.css">
    <script src="/javascripts/script.js" type="text/javascript" ></script>

  </head>
  <body class="match-mountain-lion">
    <% include ../views/partials/header %>
    <section>
      <div class="tiles">
        <div class="tile">
          <label>Analyzing...</label>
        </div>
        <!--<div class="tile">-->
          <!--<label>This could take a while. Would you like to pause analyzing and answer questions to narrow down your search?</label>-->
        <!--</div>-->
      </div>
    </section>
    <section class="action-buttons">
      <!--<div class="toggle-visibility">-->
        <button onclick="location.href='/home'" class="toggle-visibility">CANCEL</button>
      <!--</div>-->
      <!--<button onclick="location.href='/narrow'">OK</button>-->
        <button onclick="toggleImage()" class="toggle-image">
          <i class="far fa-eye"></i>
        </button>

    </section>
    <script>
        function toggleImage() {
            let el = document.getElementsByClassName("toggle-visibility");
            for (let i = 0; i < el.length; i++) {
                // el[i].style.backgroundColor = "red";
                if (el[i].classList.contains("hidden")) {
                    el[i].classList.remove("hidden");
                } else {
                    el[i].classList.add("hidden");
                }
                // if (el[i].style.display === "block") {
                //     el[i].style.display = "none";
                // } else {
                //     el[i].style.display = "block";
                // }
            }
        }
        setTimeout(function() {
            let rand = Math.floor(Math.random() * 10);
            if (rand > 4) {
                window.location.href = "/match";
            } else {
                window.location.href = "/no-match";
            }
        }, 5000);
    </script>
  </body>
</html>

